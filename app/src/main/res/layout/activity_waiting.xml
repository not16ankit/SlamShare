<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ankit.oromap.slamshare.waiting">

    <RelativeLayout
        android:id="@+id/rltick"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#008800"
        android:textSize="25dp"
        android:id="@+id/titi"
        android:textAlignment="center" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/ankit"/>
    <TextView
        android:textAlignment="center"
        android:id="@+id/textt"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/ankit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="OTP has been sent."/>
    <TextView
        android:textAlignment="center"
        android:id="@+id/textc"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/textt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="Waiting for automatic detection...."/>
    <TextView
        android:id="@+id/progress34"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textc"/>

    <Space
        android:layout_below="@id/progress34"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:id="@+id/ankit1"/>
    <TextView
        android:layout_below="@id/ankit1"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wrong Number ?"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:id="@+id/p"
        android:onClick="reverse"/>
    <Space
        android:layout_below="@id/textc"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/ankit4"/>
    <RelativeLayout
        android:id="@+id/ooprl"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ankit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
        android:hint="Verification OTP"
        android:layout_width="190dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/edity"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edity"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"/>
    </RelativeLayout>
    <Button
        android:id="@+id/but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        android:text="Resend"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:onClick="resend1"
        android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imtick"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/passtick" />
</FrameLayout>
