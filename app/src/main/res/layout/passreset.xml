<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout tools:context=".account"
    android:id="@+id/passreset"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_marginBottom="170dp"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:alpha="0.6"
            android:background="@drawable/button">

            <TextView />

            <TextView
                android:layout_marginLeft="8dp"
                android:elevation="25dp"
                android:text="New Password"
                android:textColor="#808080"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/resetnewpass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:elevation="25dp"
                android:inputType="textPassword"
                android:textColor="#000000" />

            <TextView
                android:layout_marginLeft="8dp"
                android:elevation="25dp"
                android:text="Verify New Password"
                android:textColor="#808080"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/resetnewpass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:elevation="25dp"
                android:inputType="textPassword"
                android:textColor="#000000" />
<Space android:layout_width="wrap_content"
    android:layout_height="10dp"/>
        </TableLayout>
        <Button
            android:layout_marginTop="180dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFF00"
            android:text="PROCEED"
            android:id="@+id/buttonforchange"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"/>
    </FrameLayout>
</RelativeLayout>

